<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#860000"
        android:text="sam halperin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        android:layout_marginTop="18dp"
        />

    <TextView
app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="48dp"
        android:text="ANDROID FORGERIES #1"
        android:id="@+id/title"
        ></TextView>

    <com.blauhaus.android.redwood.sample.components.index.ThumbnailDescriptionView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="A Meditation Challenge"
        app:description="Inspired by Dan Harris' 10 Percent Happier."
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/link.meditationChallenge"
        app:textColor="@color/color_on_surface"
        app:thumbnail="@drawable/medal"
        android:layout_marginTop="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>