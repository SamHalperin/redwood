<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.blauhaus.android.redwood.sample.views.ThumbnailDescriptionView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Bar graph demo"
        app:description="A nice, modular MVVM bar chart."
        app:thumbnail="@drawable/ic_all_inclusive_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#dddddd"
        android:id="@+id/link.barChartDemo"
        android:layout_margin="8dp"
        />



    <com.blauhaus.android.redwood.sample.views.ThumbnailDescriptionView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Last Four Weeks"
        app:description="An abstract calendar"
        app:thumbnail="@drawable/ic_all_inclusive_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/link.barChartDemo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#dddddd"
        android:id="@+id/link.lastFourWeeksDemo"
        android:layout_margin="8dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>