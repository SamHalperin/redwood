<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:padding="8dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/index_thumbnail_width"
        android:layout_height="@dimen/index_thumbnail_height"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_all_inclusive_black_24dp"
        />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Demo Title Here"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/thumbnail"
        app:layout_constraintStart_toEndOf="@+id/thumbnail"
        app:layout_constraintTop_toTopOf="@+id/thumbnail" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="@+id/titleText"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer mi urna, luctus nec libero ut, dignissim gravida ligula. Sed rutrum mauris eget neque aliquam, sed fermentum nulla auctor. Sed consectetur iaculis diam, tincidunt blandit elit dapibus sed. Aenean at augue in lorem consectetur dignissim. "
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="3"
        />



</androidx.constraintlayout.widget.ConstraintLayout>